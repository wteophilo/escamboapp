  <!DOCTYPE html>
<html>
<head>
  <title>Escamboapp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= stylesheet_link_tag    'site', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
	<body>
    <div id = "global-spin" class="loading" style="display: none;">Loading&#8230;</div>
		<%= render partial: "layouts/site_shared/navegation" %>
		
    <div class="container">
     <div class="well">
        <div class = "row">
          <div class = "col-lg-3"></div>
          <div class = "col-lg-6">
            <div class = "input-group">
              <input type="text" class = "form-control" placeholder="Pesquisar por..">
              <span class = "input-group-btn">
                <button class="btn btn-default" type="button">Pesquisar</button>
              </span>
            </div>
          </div>
          <div class = "col-lg-3"></div>
        </div>
      </div>    


      <div class="row">
        <%=render  partial: 'layouts/site_shared/sidebar'%>
        <div id = "home_detail" class="col-md-9">
          <% if controller_path == 'site/home'%>
            <%=render  partial: 'layouts/site_shared/carousel'%><br/>
          <%end%>
          <div class="row">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>


		<%= render partial: "layouts/site_shared/footer" %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'site' %>
	</body>
</html>