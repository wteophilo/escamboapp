<div id="wrapper">
    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Categorias</h1>
					<%if notice%>
					<div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <%= notice %>
                    </div>
                    <%end%>

                    <!--begin panel-->
                    <div class = "panel panel-default">
                    	<div class="panel-heading">
                    		Listando Categorias
                    		<%= link_to new_backoffice_category_path, class: "btn btn-sucess btn-circle pull-right",style: "margin-top: -5px" do%>
									<i class ="fa fa-plus"></i>	
                    		<%end%>
                    	</div>
	                    <div class ="panel-body">
	                   		<div class = "table-reponsive">
	                   			<table class = "table table-striped table-bordered table-hover">
	                   				<thead >
	                   					<tr>
	                   						<th>#</th>
	                   						<th>Descrição</th>
	                   						<th></th>
	                   					</tr>
	                   				</thead>
	                   				<tbody>
	                   					<%@categories.each do |category|%>
	                   					<tr>
	                   						<td><%= category.id%></td>
	                   						<td><%=category.description%></td>
	                   						<td>
	                   							<%= link_to edit_backoffice_category_path(category.id),class:"btn btn-primary btn-circle" do %>
	                   								<i class ="fa fa-edit"></i>
	                   							<%end%>
	                   							<button type="button" class ="btn btn-danger btn-circle" disabled="disabled">
	                   								<i class ="fa fa-times"></i>	
	                   							</button>
	                   						</td>
	                   					</tr>
	                   					<%end%>
	                   				</tbody>
	                   			</table>
	                   			
	                   		</div> 	
	                    </div>
	            	</div>
	            	<!--end panel-->
		                <!-- /.col-lg-12 -->
		        </div>
		            <!-- /.row -->
		    </div>
		     <!-- /.container-fluid -->
		</div>
	</div>
</div>
