
<h1 class="page-header">Administradores</h1>
<!--begin panel-->
<div class = "panel panel-default">
	<div class="panel-heading">
		Listando Administradores
		<%= link_to new_backoffice_admin_path, class: "btn btn-success btn-circle pull-right",style: "margin-top: -5px" do%>
				<i class ="fa fa-plus"></i>	
		<%end%>
	</div>
	<div class ="panel-body">
		<div class = "table-reponsive">
			<table class = "table table-striped table-bordered table-hover">
				<thead >
					<tr>
						<th>#</th>
						<th>Email</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<%@admins.each do |admin|%>
					<tr>
						<td><%= admin.id%></td>
						<td><%=admin.email%></td>
						<td>
							<%= link_to edit_backoffice_admin_path(admin.id),class:"btn btn-primary btn-circle" do %>
								<i class ="fa fa-edit"></i>
							<%end%>
							<button type="button" class ="btn btn-danger btn-circle" disabled="disabled">
								<i class ="fa fa-times"></i>	
							</button>
						</td>
					</tr>
					<%end%>
				</tbody>
			</table>
		</div>
	</div>
</div>
			