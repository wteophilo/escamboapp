    
<!-- Page Content -->
<div class="container">

  <div class="row">

    <div id = "site-bar"class="col-lg-3">
      <h1 class="my-4">Shop Name</h1>
      <div class="list-group">
        <%@categories.each do |category| %>
        <a href="#" class="list-group-item"><%=category.description%> (<%=category.ads_count%>)</a>
        <%end%>    
      </div>
    </div>
    <!-- /.col-lg-3 -->

    <div id = "home_detail" class="col-lg-9">
      <div class="row">
        <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <div class="carousel-item">
              <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Second slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

      <div class="row">
        <% @ads.each do |ad| %>
        <div class="col-sm-4 col-lg-4 col-md-4">
          <div class="thumbnail">
            <%= image_tag ad.picture.url(:medium)%>
            <div class="caption" style="height: 100px;">
              <h4 class="float-xs-right"><%= humanized_money_with_symbol ad.price%></h4>
              <%= link_to truncate(ad.title,length:20), site_ad_detail_path(ad), remote: true %>
              <p><%= truncate(ad.description_short, length:100)%></p>
            </div>
            <div class="ratings" style="padding: 5px;">
              <p class="float-xs-right"></p>
              
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.col-lg-9 -->
  </div>
  <!-- /.row -->
</div>
    <!-- /.container -->