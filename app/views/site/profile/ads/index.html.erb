<table class ='table table-houver'>
	<thead>
		<th>#</th>
		<th>Imagem</th>
		<th>Descrição</th>
		<th>Categoria</th>
		<th>Data </th>
		<th>Preço</th>
		<th></th>
	</thead>
	<tbody>
		<% @ads.each do |ad|%>
			<tr>
				<td scope="row"><%= ad.id %></td>
				<td><%= image_tag ad.picture(:thumb) %></td>
				<td><%=ad.title%></td>
				<td><%=ad.category.description%><td>
				<td><%= l(ad.finish_date) unless ad.finish_date.blank?  %></td>	
				<td><%= humanized_money_with_symbol ad.price %><td>
				<td>
					<%= link_to edit_site_profile_ad_path(ad), class: "btn btn-primary btn-small" do%>
						<i class ="fas fa-comment-alt-edit" aria-hidden="true">Editar</i>
					<% end %>
				 </td>
			</tr>
		<%end%>
	</tbody>

</table>